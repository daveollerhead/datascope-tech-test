	"item": [
		{
			"name": "Create Game",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"pm.sendRequest(`${pm.environment.get(\"baseUrl\")}/games/${pm.response.headers.get(\"Location\")}`, function (err, res) {\r",
							"    pm.test(\"Game Created\", function () {\r",
							"        pm.expect(res.code).to.eql(200);\r",
							"        pm.environment.set(\"gameId\", res.json().id);\r",
							"        pm.test(\"Has Rating\", function () {\r",
							"            pm.expect(res.json().rating).to.eql(2);\r",
							"        });\r",
							"    });\r",
							"});\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{    \r\n    \"name\": \"new game\",\r\n    \"description\": \"a new game\",\r\n    \"releasedAt\": \"2021-01-01T00:00:00\",\r\n    \"rating\": 2\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/games",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"games"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Game",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"status code is 200\", function() {\r",
							"    pm.response.to.have.status(200);\r",
							"})\r",
							"\r",
							"pm.test(\"id is as expected\", function() {\r",
							"    pm.expect(pm.response.json().id).to.eql(parseInt(pm.request.url.path[1]));\r",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/games/:id",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"games",
						":id"
					],
					"variable": [
						{
							"key": "id",
							"value": "5021"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Update Game",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 204\", function () {\r",
							"    pm.response.to.have.status(204);\r",
							"});\r",
							"\r",
							"pm.sendRequest(`${pm.environment.get(\"baseUrl\")}/games/${pm.environment.get(\"gameId\")}`, function (err, res) {\r",
							"    pm.test(\"Game Updated\", function () {\r",
							"        pm.expect(res.code).to.eql(200);        \r",
							"        pm.test(\"Rating Updated\", function () {\r",
							"            pm.expect(res.json().rating).to.eql(3);\r",
							"        });\r",
							"        pm.test(\"Name Updated\", function () {\r",
							"            pm.expect(res.json().name).to.contain(\"- edited\");\r",
							"        });\r",
							"        pm.test(\"Description Updated\", function () {\r",
							"            pm.expect(res.json().description).to.contain(\"- edited\");\r",
							"        });\r",
							"    });\r",
							"});\r",
							"    "
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "PUT",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"id\": 5021,\r\n    \"name\": \"new game - edited\",\r\n    \"description\": \"a new game - edited\",\r\n    \"releasedAt\": \"2021-01-01T00:00:00\",\r\n    \"rating\": 3\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/games/:id",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"games",
						":id"
					],
					"variable": [
						{
							"key": "id",
							"value": "{{gameId}}"
						}
					]
				}
			},
			"response": []
		},
